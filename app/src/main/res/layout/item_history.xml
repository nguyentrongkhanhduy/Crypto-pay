<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idHistoryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">


    <RelativeLayout
        android:id="@+id/item_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
                android:layout_below="@id/transaction_name"
                android:id="@+id/transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền"
                android:textColor="@color/black"
                android:textSize="17sp"
                />

        <TextView
            android:layout_below="@id/transaction_amount"
            android:id="@+id/transaction_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người gửi"
            android:textColor="@color/black"
            android:textSize="17sp"
            />

        <TextView
            android:layout_below="@id/transaction_from"
            android:id="@+id/transaction_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người nhận"
            android:textColor="@color/black"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:text="Ngày"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/transaction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/transaction_date"
            android:text="Vào lúc"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_below="@id/transaction_to"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lời nhắn"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>