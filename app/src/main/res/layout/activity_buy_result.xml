<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BuyResultActivity"
    android:background="#FEE300">

    <ImageButton
        android:id="@+id/home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_home" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Kết quả giao dịch"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/detail_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/method"/>

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/img"
                                android:text="Mua mã thẻ"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/typeCardBought"
                                android:layout_toEndOf="@id/title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textAllCaps="true"/>

                            <TextView
                                android:id="@+id/sum_payment"
                                android:layout_toEndOf="@id/img"
                                android:layout_below="@id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/title_id_trans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sum_payment"
                                android:layout_toEndOf="@id/img"
                                android:text="Mã giao dịch:"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/id_trans"
                                android:layout_toEndOf="@id/title_id_trans"
                                android:layout_below="@id/sum_payment"
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#a7ffa4">

                                <ImageView
                                    android:id="@+id/icon_success"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_check"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:layout_toEndOf="@id/icon_success"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giao dịch thành công"
                                    android:textSize="12sp"
                                    android:layout_marginStart="7dp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thời gian thanh toán"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="#DDDDDD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nguồn"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:text="Crypto pay"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="#DDDDDD" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/balance_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@id/detail_frame">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số dư ví"/>

                        <TextView
                            android:id="@+id/typeCoin_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_alignParentEnd="true"/>

                        <TextView
                            android:id="@+id/balance"
                            android:layout_toStartOf="@id/typeCoin_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textctgd"
                    android:layout_below="@id/balance_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Thông tin thêm"
                    android:textSize="17sp"
                    android:textAllCaps="true"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textctgd"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhà mạng"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/typeCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="#DDDDDD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn giá"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/single"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="#DDDDDD" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:background="#DDDDDD" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textCard"
                    android:layout_below="@id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Thẻ đã mua"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textCard"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTypeCard1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã thẻ"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/typeCard1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/titleTypeCard1"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/first_single_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mệnh giá"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/first_single"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/first_single_title"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/card_1_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ECECEC"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/first_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số seri"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/first_seri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/first_single_seri_title"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTypeCard2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã thẻ"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/typeCard2"
                                android:layout_toEndOf="@id/titleTypeCard2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/second_single_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mệnh giá"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/second_single"
                                android:layout_toEndOf="@id/second_single_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/card_2_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:background="#ECECEC"/>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/second_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số seri"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/second_seri"
                                android:layout_toEndOf="@id/second_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTypeCard3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã thẻ"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/typeCard3"
                                android:layout_toEndOf="@id/titleTypeCard3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/third_single_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mệnh giá"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/third_single"
                                android:layout_toEndOf="@id/third_single_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/card_3_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:background="#ECECEC"/>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/third_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số seri"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/third_seri"
                                android:layout_toEndOf="@id/third_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card3"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titleTypeCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mã thẻ"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/typeCard4"
                                android:layout_toEndOf="@id/titleTypeCard4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/fourth_single_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mệnh giá"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/fourth_single"
                                android:layout_toEndOf="@id/fourth_single_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/card_4_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:background="#ECECEC"/>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:id="@+id/fourth_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số seri"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/fourth_seri"
                                android:layout_toEndOf="@id/fourth_single_seri_title"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card4"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
